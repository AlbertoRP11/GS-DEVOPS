@{
    var usuario = ViewBag.Usuario as PURE.Models.Usuario;
    var eventosParticipados = ViewBag.Eventos;
}

<div class="container mt-5">
    <h2>Perfil do Usuário</h2>
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title"><strong>Nome do Usuário:</strong> @usuario.UserName</h5>
            <p class="card-text"><strong>Email:</strong> @usuario.UserEmail</p>
            <p class="card-text"><strong>Pontos Acomulados:</strong> 375<p>
                <form asp-action="DesativarPerfil" asp-controller="Usuario" method="post">
                    <button type="submit" class="btn btn-danger">Desativar</button>
                </form>
        </div>
    </div>

    <h3>Eventos Participados</h3>
    <div class="row">
        @foreach (var evento in eventosParticipados)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 style="color: #33A1B8;" class="card-title"><strong>@evento.EventName</strong></h5>
                        <p class="card-text"><strong>Descrição:</strong> @evento.Description</p>
                        <p class="card-text"><strong>Local do Evento:</strong> @evento.EventLocal</p>
                        <p class="card-text"><strong>Data do Evento:</strong> @evento.EventDate</p>
                        <p class="card-text"><strong>Hora inicial do Evento:</strong> @evento.InitialEventTime</p>
                        <p class="card-text"><strong>Pontos do Evento:</strong> @evento.EventPoint</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>